{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./types",
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2016",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "outDir": "./out",
    "strictNullChecks": true,
    "target": "es2019"
  },
  "include": [
    "./src/**/*.ts"
  ]
}